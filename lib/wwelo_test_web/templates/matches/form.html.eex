<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :date, class: "control-label" %>
    <%= date_select f, :date, class: "form-control" %>
    <%= error_tag f, :date %>
  </div>

  <div class="form-group">
    <%= label f, :winner, class: "control-label" %>
    <%= text_input f, :winner, class: "form-control" %>
    <%= error_tag f, :winner %>
  </div>

  <div class="form-group">
    <%= label f, :winner_elo, class: "control-label" %>
    <%= number_input f, :winner_elo, class: "form-control" %>
    <%= error_tag f, :winner_elo %>
  </div>

  <div class="form-group">
    <%= label f, :loser, class: "control-label" %>
    <%= text_input f, :loser, class: "form-control" %>
    <%= error_tag f, :loser %>
  </div>

  <div class="form-group">
    <%= label f, :loser_elo, class: "control-label" %>
    <%= number_input f, :loser_elo, class: "form-control" %>
    <%= error_tag f, :loser_elo %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
